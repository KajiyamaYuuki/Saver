  <header class="card-header">
    <p class="card-header-title fas fa-store">
      <%= link_to @shop.name, shop_path(@shop.id) %>
    </p>
  </header>
  <div class="card-content">
    <div class="content average-score">
      <div class="star-rating mb-2">
        <div class="star-rating-front" style="width: <%= @shop.review_score_percentage %>%">★★★★★</div>
        <div class="star-rating-back">★★★★★</div>
      </div>
      <div class="average-score-display ml-3 pt-2">
        <%= @shop.average_score %>点（<%= @shop.reviews.count %>件のレビュー）
      </div>
    </div>
  </div>
<table class="table is-fullwidth has-text-centered">
  <thead>
    <tr>
      <th>ユーザー</th><th>点数</th><th>内容</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user.name %></td>
        <td><%= review.score %></td>
        <td><%= review.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'form', review: @review, shop: @shop %>
