<!DOCTYPE html>
<html>
  <head>
    <title>Saver</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/97393c8142.js" crossorigin="anonymous"></script>
  </head>

  <body class="container">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/shops">Saver</a>
        <% if user_signed_in? %>
          <%= link_to "マイページ", user_path(current_user.id) %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          <%= link_to "管理画面", rails_admin_path if current_user.is_admin? %>
          <% if current_user.is_owner? %>
            <%= link_to "店舗登録", new_shop_path unless current_user.shop.present? %>
            <%= link_to "マイ店舗ページ", shop_path(current_user.shop.id) if current_user.shop.present? %>
          <% end %>
        <% else %>
          <%= link_to "新規登録", new_user_registration_path %>
          <%= link_to "ログイン", new_user_session_path %>
        <% end %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
