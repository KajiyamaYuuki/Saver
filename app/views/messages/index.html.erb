<% if @over_ten %>
  <%= link_to '以前のメッセージ', '?m=all' %>
<% end %>
<div class="ui segment">
  <h2><%= @conversation.recipient.name %>さんと<%= @conversation.sender.name %>さんの個別メッセージ画面</h2>
  <% @messages.each do |message| %>
    <% if message.body.present? %>
      <div class="item">
        <div class="content">
          <div class="header"><strong><%= message.user.name %></strong> <%= message.message_time %></div>
          <div class="list">
            <div class="item">
              <i class="right triangle icon"></i>
              <%= message.body %> /
              <% if message.user == current_user %>
                <%= message.read ? '既読' : '未読' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class='contents'>
  <div class="js-message-errors"></div>
  <%= form_with(model: [@conversation, @message]) do |f| %>
    <div class="field">
      <%= f.text_area :body, class: "form-control", id: "message-index-body" %>
    </div>
      <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
    <div>
      <%= f.submit "メッセージを送る", id: "message-index-submit" %>
    </div>
  <% end %>
</div>
